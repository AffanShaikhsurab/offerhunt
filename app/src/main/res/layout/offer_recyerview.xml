<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    android:layout_height="128dp">

    <androidx.cardview.widget.CardView
        android:layout_width="359dp"
        android:layout_height="113dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="17dp"

        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8">

        <ImageView
            android:id="@+id/offer_imageview"
            android:layout_width="92dp"
            android:layout_height="89dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rectangle_1" />

        <TextView
            android:id="@+id/offer_max_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="121dp"
            android:layout_marginTop="59dp"
            android:gravity="top"
            android:text="Offer Name"
            android:textColor="#171A1F"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/min_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="59dp"
            android:gravity="top"
            android:text="Offer Name"
            android:textColor="#171A1F"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/place_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="79dp"
            android:gravity="top"
            android:text="Offer Name"
            android:textColor="#171A1F"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/places_name"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="123dp"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:text="description"
            android:textSize="16sp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardVieww"
            android:layout_width="69dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="271dp"
            android:layout_marginTop="42dp"

            android:backgroundTint="#FF5252"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/offerHistory_price"
                android:layout_width="60dp"
                android:layout_height="19dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:gravity="top"
                android:text="Claim"
                android:textAppearance="@style/withdraw"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>